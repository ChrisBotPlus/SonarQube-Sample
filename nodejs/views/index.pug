extends layout

block content
  div(class='jumbotron text-center', style='margin-bottom:0 jumbotron-fluid')
    div(class='container')
      h1= title
      p Sample Express website

    div(class='container')
      if error
        p Error getting dynamic content.
      else
        p The library has the following record counts:
        p #[strong Books:] !{data.book_count}
        p #[strong Copies:] !{data.book_instance_count}
        p #[strong Copies available:] !{data.book_instance_available_count}
        p #[strong Authors:] !{data.author_count}
        p #[strong Genres:] !{data.genre_count}
